{
  "compilerOptions": {
    "target": "ES2016",
    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",

    /* Emit */
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "es2017", "dom"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strictNullChecks": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "types", "out", ".next", ".turbo"],
  "include": ["global.d.ts", "src"]
}
